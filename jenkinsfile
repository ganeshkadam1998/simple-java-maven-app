pipeline {
    agent any
    environment{
       PATH="/opt/maven/bin:$PATH"
    }

    stages {
        stage('build maven project'){
            steps{
                sh 'mvn clean package'
            }
        }

        stage('sonar setup'){
         environment  {
         scannerHome= tool 'sonar-que'
        }

     steps{
              withSonarQubeEnv('sonar-que-Scanner')
              {
               sh "${scannerHome}/bin/sonar-scanner"
              }
            }

        }

    }
}


